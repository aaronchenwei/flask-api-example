root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
max_line_length = 120
indent_style = space
indent_size = 4
ignore_frosted_errors = E103
skip = runtests.py,build
balanced_wrapping = true
not_skip = __init__.py

[Makefile]
indent_style = tab